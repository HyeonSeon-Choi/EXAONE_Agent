<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- 상단: 돌아가기 & 브랜드 -->
        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← 돌아가기"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● EXAONE 챗봇"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- 제목 및 설명 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layout_top"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사내 업무 지원을 위한 계정을 생성합니다."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 폼 영역 컨테이너 -->
        <LinearLayout
            android:id="@+id/layout_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 1행: 사번 ID, 이름 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 사번 ID -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사번 ID (사번)"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/card_border"
                        app:strokeWidth="1dp">

                        <EditText
                            android:id="@+id/et_employee_id"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:background="@android:color/transparent"
                            android:hint="ex) 20240123"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- 이름 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/card_border"
                        app:strokeWidth="1dp">

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:background="@android:color/transparent"
                            android:hint="실명 입력"
                            android:textSize="14sp"
                            android:inputType="textPersonName"
                            android:textColorHint="@color/text_hint" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- 비밀번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/card_border"
                    app:strokeWidth="1dp">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@android:color/transparent"
                        android:hint="비밀번호 입력"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:textColorHint="@color/text_hint" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- 부서 / 직급 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- 부서 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="부서"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/card_border"
                        app:strokeWidth="1dp">

                        <Spinner
                            android:id="@+id/sp_department"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown"
                            android:entries="@array/department_list"
                            android:prompt="@string/department_prompt" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- 직급 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="직급"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/card_border"
                        app:strokeWidth="1dp">

                        <Spinner
                            android:id="@+id/sp_position"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown"
                            android:entries="@array/position_list"
                            android:prompt="@string/position_prompt" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- 가입 완료 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:text="가입 완료"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/exaone_red"
                app:cornerRadius="12dp" />

            <!-- 이미 계정이 있으신가요? 로그인하기 -->
            <TextView
                android:id="@+id/tv_login_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미 계정이 있으신가요? 로그인하기"
                android:textSize="14sp"
                android:textColor="@color/exaone_red"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/exaone_red"
            app:layout_constraintTop_toBottomOf="@id/layout_form"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>