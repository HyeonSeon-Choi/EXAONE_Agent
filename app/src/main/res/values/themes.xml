<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- EXAONE Theme -->
    <style name="Theme.ExaoneAgent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/exaone_red</item>
        <item name="colorPrimaryVariant">@color/exaone_red_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/exaone_red</item>
        <item name="colorSecondaryVariant">@color/exaone_red_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/background_white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.ExaoneAgent.Button</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.ExaoneAgent.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>